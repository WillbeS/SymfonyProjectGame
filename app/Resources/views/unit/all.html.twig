{% extends 'base.html.twig' %}

{% block header %}
    {% include 'partials/header.html.twig' with {'platform': platform} %}
{% endblock %}

{% block platformCommon %}
    {% include 'partials/platform-common.html.twig' with {
    'platform': platform,
    'appService': appService
    } %}
{% endblock %}

{% block body %}
    <h1>Units</h1>
    <p><i>All unit types and their cost.</i></p>
    <table class="table">
        <thead>
        <tr>
            <th>Unit</th>
            <th>Name</th>
            <th>Wood</th>
            <th>Food</th>
            <th>Supplies</th>
            <th>Build time</th>
            <th>Recruit</th>

        </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td>
                    <a href="{{ path('view_unit_type', {'platformId': platform.id, 'unitTypeId': unit.unitType.id}) }}"><img width="100" height="70" src="{{ asset('images/design/' ~ unit.unitType.slug ~ '.jpg') }}" /></a>
                </td>
                <td>
                    <a href="{{ path('view_unit_type', {'platformId': platform.id, 'unitTypeId': unit.unitType.id}) }}">{{ unit.unitType.name }}</a>
                </td>
                <td>{{ unit.unitType.woodCost }}</td>
                <td>{{ unit.unitType.foodCost }}</td>
                <td>{{ unit.unitType.suppliesCost }}</td>
                <td>{{ unit.unitType.buildTime }}</td>
                {% if unit.available %}
                    <td><a href="{{ path('recruit', {'platformId': platform.id, 'unitId': unit.id}) }}">{{ unit.building.name }}</a></td>
                {% else %}
                    <td>{{ unit.status }}</td>
                {% endif %}


            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

