{% extends 'base.html.twig' %}
{# @var platform \AppBundle\Entity\Platform #}
{% set platform = platform_data.currentPlatform %}

{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock %}

{% block platformCommon %}
    {% include 'partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}

    <div class="card-body p-5">
        <h4 class="card-title">Training Camp</h4>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#recruit">Recruit troops</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#army">Army overview</a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade show active" id="recruit">
                {% include 'unit/recruit-table.html.twig' with {'units': platform.units, 'platform_id': platform.id} %}
            </div>

            <div class="tab-pane fade" id="army">
                {% include 'unit/army-table.html.twig' with {'units': platform.units, 'platform_id': platform.id} %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/timer.js') }}"></script>
    <script>
        $(document).ready(function(){
            setTimers('.timer');
        });
    </script>
{% endblock %}
