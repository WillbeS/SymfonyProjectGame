{% extends 'base.html.twig' %}

{% block header %}
    {% include 'partials/header.html.twig' with {'platform': platform} %}
{% endblock %}

{% block platformCommon %}
    {% include 'partials/platform-common.html.twig' with {
    'platform': platform,
    'appService': appService
    } %}
{% endblock %}

{% block body %}
    <h1>All Players</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Settlement</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td><a href="{{ path('view_public_profile', {'id': platform.id, 'userId': player.id}) }}" title="Got to profile">{{ player.username }}</a></td>
                <td>{{ player.currentPlatform.name }}</td>
                <td>
                    <a href="{{ path('send_message', {'id': platform.id, 'recipientId': player.id}) }}">Send Message</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}