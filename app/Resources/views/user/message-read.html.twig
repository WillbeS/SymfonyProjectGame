{% extends 'base.html.twig' %}
{# @var platform \AppBundle\Entity\Platform #}
{% set platform = platform_data.currentPlatform %}

{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock %}

{% block platformCommon %}
    {% include 'partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    <div>
        <b>Chat with: </b>{{ convo.partner(app.user).username }}<br/>
        <b>About: </b>{{ convo.topic.about }}
        <div class="pull-right">
            <a href="{{ path('send_reply', {'id': platform.id, 'topicId': convo.topic.id}) }}" class="btn btn-info">Reply</a>
            <a href="#" class="btn btn-danger" data-toggle="popover"  data-trigger="focus" data-content="Are you sure you want to delete this conversation? <div class='text-center'><a  href='{{ path('delete_topic', {'id': platform.id, 'topicId': convo.topic.id}) }}'>Delete!</a></div>">Delete</a>
        </div>
    </div>

    <hr />
    {% for message in convo.messages %}
        <p><b>{{ message.sender.username }}</b> <small>{{ message.createdOn | date('F jS \\a\\t g:ia ', 'Europe/Sofia') }}</small></p>
        <p>{{ message.content }}</p>
        <hr />
    {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            var popoverBtn = $("[data-toggle=popover]");
            popoverBtn.click(function (event) {
                event.preventDefault();
            });

            popoverBtn
                .popover(
                    {
                        placement: 'top',
                        html:true,
                        title: '<button type="button" class="close">&times;</button>'
                    }
                );
        });
    </script>
{% endblock %}