{% extends 'base.html.twig' %}
{# @var platform \AppBundle\Entity\Platform #}
{% set platform = platform_data.currentPlatform %}

{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock %}

{% block platformCommon %}
    {% include 'partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Send Attack</h1>
    <h3>Target: {{ defender.username }}</h3>
    <h3>Choose your troops:</h3>
    <form method="post">
    <table class="table">
        <thead>
        <tr>
            <th>Unit</th>
            <th>Available</th>
            <th>Add</th>
        </tr>
        </thead>
        <tbody>

        {% for unit in platform.units %}
            <tr>
                <td>{{ unit.unitType.name }}</td>
                <td>{{ unit.iddle }}</td>
                <td class="unit-count">
                    <input type="number" name="{{ unit.id }}" value="0" />
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <input type="submit" value="Send" />
    </form>
{% endblock %}