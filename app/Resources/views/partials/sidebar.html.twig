{# @var platform \AppBundle\Entity\Platform #}
{% set platform = platform_data.currentPlatform %}
<h2>{{ platform.name }}</h2>

<h2>Resources</h2>
{% for resource in platform.resources %}
    <b>{{ resource.resourceType.name }}:</b> {{ resource.total|round(0, 'floor') }} <br />
{% endfor %}
<hr />

<h2>Income per hour</h2>
{% for resource in platform.resources %}
    <b>{{ resource.resourceType.name }}:</b> {{ getIncome(resource) }}<br />
{% endfor %}
<hr />

<h2>Units</h2>
<p>
    {% for unit in platform.units %}
        {% if unit.total > 0 %}
        <b>{{ unit.unitType.name }}:</b> {{ unit.total }} <br />
        {% endif %}
    {% endfor %}
</p>
<br/>

<p class="small"><i>This information is for the current settlement.</i></p>