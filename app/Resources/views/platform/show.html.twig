{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ platform.name }}</h1>
    <p>This is your first settlement. Try and keep it save from the dead walking outside your walls.</p>

    <h2>Resources</h2>
    <p>
        <span>Food: {{ platform.food }}</span>
        <span>Wood: {{ platform.wood }}</span>
        <span>Supplies: {{ platform.supplies }}</span>
    </p>

    <h2>Buildings</h2>
    {% for building in buildings %}
        {{ building.type.name }}
    {% endfor %}

{% endblock %}